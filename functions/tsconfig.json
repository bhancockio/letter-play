{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"baseUrl": "./",
		"paths": {
			"shared": [
				"lib" // the relative path to our generated library
			]
		}
	},
	"compileOnSave": true,
	"include": ["src"]
}
